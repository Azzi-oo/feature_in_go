FROM golang:1.21.1

# Копируем все файлы из тек.директории в корневую контейнера
COPY . /

# Устанавливаем рабочую директорию в корень контейнера
WORKDIR /

# Собираем Go проект
RUN go build main.go

# Указываем команду, которая будет выполняться при запуске контейнера
CMD [ "./main" ]

# Открываем порт 8080, чтобы контейнер мог принимать входящие сетевые запросы
EXPOSE 8080